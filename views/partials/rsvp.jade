div.hero-unit
	h2 RSVP

	form(ng-submit='save()', method='POST')
		
		label Your Name
		input(type='text', name='name', required, ng-model='entry.name')

		fieldset
			legend Will you be attending?

			label.radio
				input(type='radio', name='coming', value='Happily Accepts', checked, ng-model='entry.coming'))
				| Happily Accepts
			
			label.radio
				input(type='radio', name='coming', value='Regretfully Declines', ng-model='entry.coming'))
				| Regretfully Declines

		br

		label How many total in your group?
		select(name='howMany', ng-model='entry.howMany'))
			option 1
			option 2
			option 3
			option 4
			option 5

		br

		input.btn.btn-primary(type='submit', name='submit', value='Submit')